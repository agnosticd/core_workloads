---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: {{ ocp4_workload_minio_name }}
  namespace: {{ ocp4_workload_minio_project }}
  labels:
    app: {{ ocp4_workload_minio_name }}
spec:
  accessModes:
  - ReadWriteOnce
  resources:
    requests:
      storage: "{{ ocp4_workload_minio_storage_size }}"
{% if ocp4_workload_minio_storage_class_name | length > 0 %}      
  storageClassName: "{{ ocp4_workload_minio_storage_class_name }}
{% endif %}
    